pipeline {
    agent any

    tools {
        maven 'Maven 3.8.1' // Configure in Jenkins Global Tools
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://your-repo-url/java-webapp.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Docker Build & Run') {
            steps {
                script {
                    sh 'docker build -t java-webapp .'
                    sh 'docker rm -f java-webapp || true'
                    sh 'docker run -d -p 8081:8081 --name java-webapp java-webapp'
                }
            }
        }
    }
}
